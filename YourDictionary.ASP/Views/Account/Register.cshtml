@model YourDictionary.ASP.ViewModels.RegisterViewModel

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">

    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Enter name</label>
            @Html.TextBoxFor(m => m.Name)
            @*<label asp-for="Name">Enter name</label>
            <input type="text" asp-for="Name" />*@
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Enter email</label>
            @Html.TextBoxFor(m => m.Email)
            @*<label asp-for="Email">Enter email</label>
            <input asp-for="Email" />*@
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            @Html.PasswordFor(m => m.Password)
            @*<label asp-for="Password">Enter password</label>
            <input asp-for="Password" />*@
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm password</label>
            @Html.PasswordFor(m => m.ConfirmPassword)
            @*<label asp-for="ConfirmPassword">Confirm password</label>
            <input asp-for="ConfirmPassword" />*@
            <span asp-validation-for="ConfirmPassword" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>
</form>
